<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y120"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_item_device_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x30"
        android:src="@mipmap/device_unconnect"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_decive_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:layout_toLeftOf="@+id/tv_item_device_off"
        android:layout_toRightOf="@+id/iv_item_device_pic"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/home_setting_text"
        android:textSize="14sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_decive_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y25"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x30"
        android:layout_toLeftOf="@+id/tv_item_device_off"
        android:layout_toRightOf="@+id/iv_item_device_pic"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/home_setting_text_three"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded" />


    <ImageView
        android:id="@+id/iv_item_device_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x30"
        android:src="@mipmap/device_more_details"
        tools:ignore="RtlHardcoded" />


    <TextView
        android:id="@+id/tv_item_device_off"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y60"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x10"
        android:layout_toLeftOf="@+id/iv_item_device_more"
        android:background="@drawable/circle_orange_ten"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone"
        tools:ignore="RtlHardcoded" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/y50"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x10"
        android:layout_toLeftOf="@+id/tv_connecting"
        android:visibility="gone"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_connecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x10"
        android:layout_toLeftOf="@+id/iv_item_device_more"
        android:textColor="@color/home_setting_text_three"
        android:textSize="13sp"
        android:visibility="gone"
        tools:ignore="RtlHardcoded" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_16" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/device_update_nickname_actionbar"
        layout="@layout/common_actionbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_below="@+id/device_update_nickname_actionbar"
        android:layout_marginTop="@dimen/y30">

        <EditText
            android:id="@+id/et_device_update_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="@string/device_update_nickname_tip"
            android:maxLength="10"
            android:paddingLeft="@dimen/x20"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black_16" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_device_update_nickname_confirm"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y80"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/circle_orange_ten"
        android:gravity="center"
        android:text="@string/device_update_nickname_confirm"
        android:textColor="@color/white"
        android:textSize="14sp" />


</RelativeLayout>
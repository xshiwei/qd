<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_actionbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/black_16" />


    <com.wang.avi.AVLoadingIndicatorView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avi_loading"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y300"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y50"
        app:indicatorColor="@color/add_device_selete"
        app:indicatorName="BallScaleMultipleIndicator" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y50"
        android:padding="5dp"
        android:text="@string/device_connect_text_one"
        android:textColor="@color/app_title"
        android:textSize="16sp" />


    <RelativeLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_marginTop="@dimen/y80"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avi_one"
            style="@style/AVLoadingIndicatorView.Large"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x50"
            app:indicatorColor="@color/add_device_selete"
            app:indicatorName="CubeTransitionIndicator"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x130"
            android:text="@string/device_connect_text_two"
            android:textColor="@color/add_device_selete"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avi_two"
            style="@style/AVLoadingIndicatorView.Large"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x50"
            app:indicatorColor="@color/add_device_selete"
            app:indicatorName="CubeTransitionIndicator"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x130"
            android:text="@string/device_connect_text_three"
            android:textColor="@color/add_device_selete"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avi_three"
            style="@style/AVLoadingIndicatorView.Large"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x50"
            app:indicatorColor="@color/add_device_selete"
            app:indicatorName="CubeTransitionIndicator"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x130"
            android:text="@string/device_connect_text_four"
            android:textColor="@color/add_device_selete"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_four"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avi_four"
            style="@style/AVLoadingIndicatorView.Large"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x50"
            app:indicatorColor="@color/add_device_selete"
            app:indicatorName="CubeTransitionIndicator"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x130"
            android:text="@string/device_connect_text_five"
            android:textColor="@color/add_device_selete"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_complete"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:background="@drawable/seletor_circle_blue_gray_five"
            android:gravity="center"
            android:text="@string/device_connect_complete"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>
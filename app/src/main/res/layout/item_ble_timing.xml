<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/layout_seletor"
    android:clickable="true"
    android:layout_height="@dimen/y120">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:ellipsize="end"
        android:lines="1"
        android:text="2018-10-10"
        android:textColor="@color/home_setting_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y25"
        android:layout_marginLeft="@dimen/x30"
        android:ellipsize="end"
        android:lines="1"
        android:text="设置开"
        android:textColor="@color/home_setting_text_two"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x30"
        android:src="@mipmap/device_ble_timing_one" />

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/popupwindow_edittext"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>
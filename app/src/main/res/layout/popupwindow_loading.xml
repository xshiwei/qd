<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_shape">

    <com.wang.avi.AVLoadingIndicatorView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avi_loading"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="@dimen/x65"
        android:layout_height="@dimen/y65"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/y40"
        android:layout_marginLeft="@dimen/x80"
        android:layout_marginTop="@dimen/y40"
        app:indicatorColor="@color/add_device_selete"
        app:indicatorName="BallSpinFadeLoaderIndicator" />

    <TextView
        android:padding="5dp"
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x50"
        android:layout_toRightOf="@+id/avi_loading"
        android:text="正在加载"
        android:textColor="@color/app_title"
        android:textSize="16sp" />

</RelativeLayout>
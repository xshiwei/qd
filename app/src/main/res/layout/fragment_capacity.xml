<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_manage_backgroud"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@color/white">

        <android.support.design.widget.TabLayout
            android:id="@+id/tbl_capacity"
            android:layout_width="@dimen/x400"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            app:tabBackground="@color/white"
            app:tabIndicatorColor="@color/capacity_tablayout_text_two"
            app:tabSelectedTextColor="@color/capacity_tablayout_text_two"
            app:tabTextColor="@color/capacity_tablayout_text" />

        <ImageView
            android:id="@+id/iv_capacity_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/capacity_add"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_capacity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>
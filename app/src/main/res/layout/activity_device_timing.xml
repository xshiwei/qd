<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_common_actionbar_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:contentDescription="TODO"
            android:padding="5dp"
            android:src="@mipmap/actionbar_goback" />

        <TextView
            android:id="@+id/tv_common_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/app_title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_device_timing_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/x20"
            android:text="@string/device_timing_save"
            android:textColor="@color/app_title"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_device_timing_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center"
        android:text="00小时00分钟之后执行"
        android:textColor="@color/black_16"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="test_number_picker_view"
            app:npv_DividerColor="@color/black_16"
            app:npv_HintText="时"
            app:npv_ItemPaddingVertical="@dimen/y25"
            app:npv_RespondChangeOnDetached="false"
            app:npv_ShowCount="5"
            app:npv_TextArray="@array/hour_display"
            app:npv_TextColorHint="@color/capacity_tablayout_text_two"
            app:npv_TextColorNormal="@color/home_setting_text_two"
            app:npv_TextColorSelected="@color/capacity_tablayout_text_two"
            app:npv_TextSizeHint="14sp"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="26sp"
            app:npv_WrapSelectorWheel="true" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black_16" />

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_minute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="test_number_picker_view"
            app:npv_DividerColor="@color/black_16"
            app:npv_HintText="分"
            app:npv_ItemPaddingVertical="@dimen/y25"
            app:npv_RespondChangeOnDetached="false"
            app:npv_ShowCount="5"
            app:npv_TextArray="@array/minute_display"
            app:npv_TextColorHint="@color/capacity_tablayout_text_two"
            app:npv_TextColorNormal="@color/home_setting_text_two"
            app:npv_TextColorSelected="@color/capacity_tablayout_text_two"
            app:npv_TextSizeHint="14sp"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="26sp"
            app:npv_WrapSelectorWheel="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/y100"
        android:background="@color/black_16" />

    <RelativeLayout
        android:id="@+id/rl_device_timing_repeat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y15"
            android:text="设备"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginLeft="@dimen/x20"
            android:text="一"
            android:textColor="@color/black6"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:src="@mipmap/device_timing_down" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black_16" />


    <RelativeLayout
        android:id="@+id/rl_device_timing_operation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y15"
            android:text="@string/device_timing_operation"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/device_timing_open"
            android:textColor="@color/black6"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:src="@mipmap/device_timing_down" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black_16" />

    <RelativeLayout
        android:id="@+id/rl_timing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y50"
        android:background="@drawable/my_capacity_selector">

        <TextView
            android:id="@+id/tv_timing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@+id/tv_delete_timing"
            android:padding="5dp"
            android:textColor="@color/home_setting_text_two"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_delete_timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:padding="5dp"
            android:text="删除"
            android:textColor="@color/red"
            android:textSize="13sp" />w
    </RelativeLayout>


</LinearLayout>
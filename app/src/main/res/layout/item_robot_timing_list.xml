<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y120"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginTop="@dimen/y20"
        android:text="@string/robot_setting_timing_item_open_time"
        android:textColor="@color/home_content_text"
        android:textSize="14sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y20"
        android:layout_toRightOf="@+id/tv_text"
        android:text="@string/robot_setting_timing_item_example_time"
        android:textColor="@color/home_content_text"
        android:textSize="14sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y25"
        android:layout_marginLeft="@dimen/x50"
        android:text="@string/robot_setting_timing_item_example_content"
        android:textColor="@color/home_setting_text_two"
        android:textSize="11sp"
        tools:ignore="RtlHardcoded" />

    <com.zcw.togglebutton.ToggleButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tlb_open_timing"
        android:layout_width="@dimen/x70"
        android:layout_height="@dimen/y35"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x50"
        app:tbAnimate="true"
        app:tbOffBorderColor="@color/home_setting_text_two"
        app:tbOffColor="@color/home_setting_text_two"
        app:tbOnColor="@color/add_home_background"
        app:tbSpotColor="@color/white"
        tools:ignore="RtlHardcoded" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@color/popupwindow_edittext" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:gravity="center_horizontal"
            android:text="如果满足某个条件时"
            android:textColor="@color/add_capacity_text"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y50"
            android:gravity="center_horizontal"
            android:text="比如：有人移动时"
            android:textColor="@color/home_setting_text_three"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:background="@color/home_manage_backgroud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x30"
                android:text="通用"
                android:textColor="@color/add_capacity_text_two"
                android:textSize="14sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/black_16" />

        <RelativeLayout
            android:id="@+id/rl_manually"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:background="@drawable/layout_seletor"
            android:clickable="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_one"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:src="@color/black_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:layout_toRightOf="@+id/iv_one"
                android:text="手动执行"
                android:textColor="@color/add_capacity_text"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:src="@mipmap/home_manage_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x30"
                android:background="@color/black_16" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_timing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:background="@drawable/layout_seletor"
            android:clickable="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_two"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:src="@color/black_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:layout_toRightOf="@+id/iv_two"
                android:text="定时"
                android:textColor="@color/add_capacity_text"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:src="@mipmap/home_manage_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x30"
                android:background="@color/black_16" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_weather"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:background="@drawable/layout_seletor"
            android:clickable="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_three"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:src="@color/black_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:layout_toRightOf="@+id/iv_three"
                android:text="室外天气发生变化时"
                android:textColor="@color/add_capacity_text"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:src="@mipmap/home_manage_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x30"
                android:background="@color/black_16" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:background="@color/home_manage_backgroud" />

    <RelativeLayout
        android:id="@+id/rl_screen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="智能设备"
            android:textColor="@color/add_capacity_text_two"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:text="筛选"
            android:textColor="@color/room_manage_add_text"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_manage_backgroud" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:background="@drawable/home_shape">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y30"
        android:text="设置家庭名称"
        android:textColor="@color/popupwindow_title"
        android:textSize="14sp" />


    <RelativeLayout
        android:id="@+id/rl_edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:layout_below="@+id/tv_title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/popupwindow_edittext">

        <EditText
            android:id="@+id/et_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_toLeftOf="@+id/iv_delete"
            android:background="@null"
            android:hint="请在此输入"
            android:padding="5dp"
            android:textColor="@color/home_setting_text_three"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/popupwindow_delete" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_edittext"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginTop="@dimen/y10"
        android:text="已超过最大字数限制"
        android:textColor="@color/red"
        android:textSize="10sp"
        android:visibility="gone" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_error"
        android:layout_marginTop="@dimen/y50"
        android:background="@color/home_setting_text_two" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_below="@+id/view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/popupwindow_button_seletor"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/popupwindow_cancle"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/home_setting_text_three" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/popupwindow_button_seletor"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/home_setting_text_three"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_seletor"
    android:clickable="true">


    <TextView
        android:id="@+id/tv_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:text="办公室"
        android:textColor="@color/home_content_text_two"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_room"
        android:layout_marginLeft="@dimen/x15"
        android:layout_toRightOf="@+id/tv_room"
        android:text="1个设备"
        android:textColor="@color/home_list_text"
        android:textSize="10sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_room"
        android:layout_marginTop="@dimen/y30"
        android:background="@color/black_16" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/app_color">

        <ImageView
            android:id="@+id/iv_device_control_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:contentDescription="TODO"
            android:src="@mipmap/actionbar_goback" />

        <TextView
            android:id="@+id/tv_device_control_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/device_control_title"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_device_control_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:contentDescription="TODO"
            android:src="@mipmap/actionbar_more_details" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_device_control_state"
            android:layout_width="@dimen/x311"
            android:layout_height="@dimen/y311"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y200"
            android:contentDescription="TODO"
            android:src="@mipmap/device_control_turnoff" />

        <TextView
            android:id="@+id/tv_device_control_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_device_control_state"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y30"
            android:text="@string/device_control_off"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y50"
            android:src="@mipmap/voice_empty" />


    </RelativeLayout>


</LinearLayout>
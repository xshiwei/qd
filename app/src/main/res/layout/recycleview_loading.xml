<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wang.avi.AVLoadingIndicatorView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avi_loading"
        style="@style/AVLoadingIndicatorView.Small"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/y60"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/home_setting_text_two"
        app:indicatorName="BallSpinFadeLoaderIndicator" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avi_loading"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="正在加载"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/home_setting_text_two"
        android:textSize="12sp" />

</RelativeLayout>
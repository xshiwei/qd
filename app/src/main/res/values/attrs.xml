<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- SimpleButton，简写sb -->
    <declare-styleable name="SimpleButton">
        <attr name="sb_mode" format="enum">
            <enum name="normal" value="201"/>
            <enum name="check" value="202"/>
            <enum name="icon_check_invisible" value="203"/>
            <enum name="icon_check_change" value="204"/>
        </attr>
        <attr name="sb_shape" format="enum">
            <enum name="round_rect" value="101"/>
            <enum name="arc" value="102"/>
            <enum name="rect" value="103"/>
        </attr>
        <!-- 3、5 是Gravity里定义的值 -->
        <attr name="sb_gravity" format="enum">
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="sb_auto_check" format="boolean"/>
        <attr name="sb_checked" format="boolean"/>
        <attr name="sb_bg_color" format="color"/>
        <attr name="sb_border_color" format="color"/>
        <attr name="sb_text_color" format="color"/>
        <attr name="sb_bg_color_check" format="color"/>
        <attr name="sb_border_color_check" format="color"/>
        <attr name="sb_text_color_check" format="color"/>
        <attr name="sb_text" format="string"/>
        <attr name="sb_text_check" format="string"/>
        <attr name="sb_text_size" format="dimension"/>
        <attr name="sb_border_width" format="dimension"/>
        <attr name="sb_border_radius" format="dimension"/>
        <attr name="sb_vertical_padding" format="dimension"/>
        <attr name="sb_horizontal_padding" format="dimension"/>
        <attr name="sb_icon_padding" format="dimension"/>
        <attr name="sb_icon" format="reference"/>
        <attr name="sb_icon_change" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SlideBottomPanel">
        <attr name="sbp_background_layout" format="reference"/>
        <attr name="sbp_title_height_no_display" format="dimension"/>
        <attr name="sbp_panel_height" format="dimension"/>
        <attr name="sbp_boundary" format="boolean"/>
        <attr name="sbp_move_distance_trigger" format="dimension"/>
        <attr name="sbp_animation_duration" format="integer"/>
        <attr name="sbp_fade" format="boolean"/>
        <attr name="sbp_hide_panel_title" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="RadarScanView">
        <attr name="circleColor" format="color"/>
        <attr name="radarColor" format="color"/>
        <attr name="tailColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="WaveProgress">
        <!-- 是否开启抗锯齿 -->
        <attr name="antiAlias" />
        <!-- 深色水波动画时间 -->
        <attr name="darkWaveAnimTime" format="integer" />
        <!-- 浅色水波动画时间 -->
        <attr name="lightWaveAnimTime" format="integer" />
        <!-- 最大值 -->
        <attr name="maxValue" />
        <!-- 当前值 -->
        <attr name="value" />
        <attr name="valueColor" />
        <attr name="valueSize" />
        <!-- 绘制内容相应的提示语 -->
        <attr name="hint" />
        <attr name="hintSize" />
        <attr name="hintColor" />
        <!-- 圆环宽度 -->
        <attr name="circleWidth" format="dimension" />
        <!-- 圆环颜色 -->
        <attr name="circleColorprogress" format="color|reference" />
        <!-- 背景圆环颜色 -->
        <attr name="bgCircleColor" format="color|reference" />
        <!-- 锁定水波不随圆环进度改变，默认锁定在50%处 -->
        <attr name="lockWave" format="boolean" />
        <!-- 水波数量 -->
        <attr name="waveNum" format="integer" />
        <!-- 水波高度，峰值和谷值之和 -->
        <attr name="waveHeight" format="dimension" />
        <!-- 深色水波颜色 -->
        <attr name="darkWaveColor" format="color|reference" />
        <!-- 是否显示浅色水波 -->
        <attr name="showLightWave" format="boolean" />
        <!-- 浅色水波颜色 -->
        <attr name="lightWaveColor" format="color|reference" />
        <!-- 浅色水波的方向 -->
        <attr name="lightWaveDirect" format="enum">
            <enum name="L2R" value="0" />
            <enum name="R2L" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RemoteControllerView">
        <attr name="rcv_text_color" format="color" />
        <attr name="rcv_shadow_color" format="color" />
        <attr name="rcv_stroke_color" format="color" />
        <attr name="rcv_stroke_width" format="dimension" />
        <attr name="rcv_text_size" format="dimension" />
        <attr name="rcv_oval_degree" format="integer" />
    </declare-styleable>



</resources>